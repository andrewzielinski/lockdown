<h1>Editing User</h1>

<%% form_for(<%= namespace.blank? ? "@user" : "[:#{namespace}, @user]" %>) do |f| %>
  <%%= f.error_messages %>
  <p>
    <b>First name</b><br />
    <%%= f.text_field :first_name %>
  </p>
  <p>
    <b>Last name</b><br />
    <%%= f.text_field :last_name %>
  </p>
  <p>
    <b>Email</b><br />
    <%%= f.text_field :email %>
  </p>
  <p>
  	<b><span>L</span>ogin</b><br />
    <%%= f.text_field :login %>
  </p>
  <p>
    <b><span>P</span>assword</b><br />
    <%%= f.password_field :password %>
  </p>
  <p>
    <b><span>P</span>assword confirmation</b><br />
    <%%= f.password_field :password_confirmation %>
  </p>
  <p>
    <b>User Groups</b><br />
    <ul style="list-style: none;">
      <%% 
        @user_groups_for_user.each_with_index do |ug,i|
          input_id = "ug_#{ug.id}"
      %>
          <li id="li_<%%= input_id %>">
            <label for="<%%= input_id %>">
            <input id="<%%= input_id %>" name="<%%= input_id %>" type="checkbox"/>&nbsp;&nbsp;<%%= ug.name %>
            </label>
          </li>
      <%% 
        end
      %>
    </ul>
  </p>
  <p> <%%= f.submit "Update" %> </p>
<%% end %>

